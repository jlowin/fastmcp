# Activ8-AI MCP Server Secrets
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# AI/LLM APIs
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# MCP SERVER CREDENTIALS
# =============================================================================

# Teamwork (Project Management)
TEAMWORK_DOMAIN=your-company
TEAMWORK_USER=email@example.com
TEAMWORK_PASS=password

# Notion (Documentation)
NOTION_TOKEN=secret_...

# Bluesky/ATProto (Social Media)
ATPROTO_HANDLE=you.bsky.social
ATPROTO_PASSWORD=app-password

# Smart Home (Philips Hue)
HUE_BRIDGE_IP=192.168.1.x
HUE_BRIDGE_USERNAME=hue-api-key

# =============================================================================
# GITHUB (for CI/CD)
# =============================================================================
FASTMCP_GITHUB_TOKEN=ghp_...
FASTMCP_TEST_AUTH_GITHUB_CLIENT_ID=
FASTMCP_TEST_AUTH_GITHUB_CLIENT_SECRET=

# =============================================================================
# REPOAGENT (Documentation Generation)
# =============================================================================
# Uses OPENAI_API_KEY above, or set a specific one:
# REPOAGENT_API_KEY=sk-...
