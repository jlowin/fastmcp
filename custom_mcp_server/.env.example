# Activ8-AI MCP Server Secrets
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
#
# NOTE: These secrets are also available as GitHub Secrets for CI/CD
# See: https://github.com/Activ8-AI/fastmcp/settings/secrets/actions

# =============================================================================
# AI/LLM APIs (AVAILABLE IN GITHUB SECRETS)
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_API_KEY_FOR_CI=sk-ant-...

# =============================================================================
# GITHUB (AVAILABLE IN GITHUB SECRETS)
# =============================================================================
GITHUB_TOKEN=ghp_...                          # Auto-provided in Actions
FASTMCP_GITHUB_TOKEN=ghp_...
FASTMCP_TEST_AUTH_GITHUB_CLIENT_ID=
FASTMCP_TEST_AUTH_GITHUB_CLIENT_SECRET=

# =============================================================================
# MARVIN AI (AVAILABLE IN GITHUB SECRETS)
# =============================================================================
MARVIN_APP_ID=
MARVIN_APP_PRIVATE_KEY=

# =============================================================================
# MCP SERVER CREDENTIALS (ADD TO GITHUB SECRETS)
# =============================================================================

# Teamwork (Project Management)
TEAMWORK_DOMAIN=your-company
TEAMWORK_USER=email@example.com
TEAMWORK_PASS=password

# Notion (Documentation)
NOTION_TOKEN=secret_...

# Bluesky/ATProto (Social Media)
ATPROTO_HANDLE=you.bsky.social
ATPROTO_PASSWORD=app-password

# Smart Home (Philips Hue)
HUE_BRIDGE_IP=192.168.1.x
HUE_BRIDGE_USERNAME=hue-api-key
